{
  "plugins": [
    "unused-imports"
  ],
  "rules": {
    "no-unused-vars": "off", // or "warn" if you want warnings for unused vars
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  },
  "extends": [
    "next/core-web-vitals",
    "plugin:prettier/recommended"
  ]
}